small = 14px
medium = 18px
large = 24px
x-large = 32px
xx-large = 64px
xxx-large = 92px

red = hsl(0, 60%, 60%)

@font-face
  font-family "04b_03"
  src url('/fonts/04b_03__-webfont.eot')
  src url('/fonts/04b_03__-webfont.eot?iefix') format('eot'), url('/fonts/04b_03__-webfont.woff') format('woff'), url('/fonts/04b_03__-webfont.ttf') format('truetype'), url('/fonts/04b_03__-webfont.svg#webfontiFL0wwqh') format('svg')
  font-weight normal
  font-style normal
  font-size medium

header, footer, nav
  display block
time
  display inline

body, input, textarea, code, pre
  font-family 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size medium

h1, h2, h3, h4, h5, h6
  font-family '04b_03', monospace
  margin-bottom 0

body
  text-align center
  background hsl(200, 10%, 80%) url('/images/noise.png') repeat
  text-shadow 0px 1px 0px hsla(0, 100%, 100%, 0.6)
  overflow scroll

a:link, a:visited
  color hsl(200, 30%, 50%)
  text-decoration none
  transition color 100ms linear
  &:hover
    text-decoration underline
    color hsl(200, 30%, 60%)
  &.scary
    color red
    &:hover
      hsl(0, 60%, 50%)

.scary
  color red

a img
  border 0

button, input[type=submit], a.button
  font-family 'Droid Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size large
  border solid 1px hsla(0, 0%, 0%, 0.2)
  background-color hsl(200, 30%, 60%)
  background hsl(200, 30%, 50%) -webkit-linear-gradient(-90deg, hsla(0, 0%, 100%, 0.5), hsla(0, 0%, 100%, 0.1) 50%)
  background hsl(200, 30%, 50%) -moz-linear-gradient(-90deg, hsla(0, 0%, 100%, 0.5), hsla(0, 0%, 100%, 0.1) 50%)
  color white !important
  text-shadow 0 -1px 0 hsla(0, 0%, 0%, 0.5)
  padding 5px 1ex
  border-radius 3px
  box-shadow inset 0 0 3px hsla(0, 0%, 0%, 0.2), 0 1px 1px hsla(0, 0%, 1000%, 0.7)
  transition background-color 200ms linear
  pointer none
  white-space nowrap
  &:hover
    text-decoration none
    background-color hsl(200, 35%, 60%)
  &:active
    box-shadow inset 0 0 10px hsla(0, 0%, 0%, 0.5)
    background-color hsl(200, 30%, 35%)
    transition none
  &.scary
    background-color red
    &:hover
      text-decoration none
      background-color hsl(0, 80%, 60%)
  &.heart
    font-size 18px
  &.loved
    background-color red

input[type=text], input[type=email], input[type=password], textarea
  outline none
  font-size large
  padding 2px 3px
  border-radius 2px
  border 2px solid #ddd
  margin 3px 0
  box-shadow inset 0 0 3px hsla(0, 0%, 0%, 0.1)
  &:focus
    border-color #bbb

textarea
  font-size medium
  max-width 100%

p, ul
  margin 1em 0

p, li
  line-height 150%

ul
  list-style-type none
  padding-left 0

img.spinner
  display none
  width 16px
  height 16px
  margin 0px 2px

img.avatar
  vertical-align middle
  margin 2px 5px 2px 0
  border-radius 3px
  width 30px
  height 30px
img.via-github
  margin-bottom -4px

ul.errors
  color hsl(0, 60%, 60%)

aside
  display block
  float right
  width 260px
  margin-top 20px
  text-align center
  .login
    text-align center
    a.button
      font-size medium
    .via
      font-size small
      margin-top 7px
  table.important-dates
    width 100%
    border-collapse collapse
    td
      text-align center
      text-align '-'
    th.asterisk
      font-weight normal
      font-size small
  ul.sponsors
    list-style-type none
    margin 2em 0 0
    padding 0
    text-align center
    li
      margin-top -10px
    // sponsor logo list: x-height = 20px; descender = 23px; ascender = 26px
    for sponsor in adobe bislr couchbase geeklist github heroku joyent linode maxcdn meebo mongohq ngmoco nodejitsu nodesocket postageapp pubnub pusher spreecast tapjoy tradeking twilio
      img.{sponsor}
        width image-size('/images/sponsors/' + sponsor + '.png')[0]
        height image-size('/images/sponsors/' + sponsor + '.png')[1]
    for sponsor in sleepless summercamp
      img.{sponsor}
        width image-size('/images/sponsors/' + sponsor + '.gif')[0]
        height image-size('/images/sponsors/' + sponsor + '.gif')[1]
    img.sleepless
      margin 2px 0 5px
    img.summercamp
      margin 3px 0 10px
    li.interested
      margin 15px 0

